{
  "name": "next-offline-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "backend:start": "./start-backend.sh",
    "backend:stop": "docker-compose down",
    "backend:logs": "docker-compose logs -f app",
    "backend:restart": "docker-compose restart app",
    "backend:status": "docker ps --filter name=laravel_",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm run start",
    "frontend:lint": "cd frontend && npm run lint",
    "frontend:format": "cd frontend && npm run format"
  }
}
